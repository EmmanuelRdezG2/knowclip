{
  "name": "audio-flashcard-assistant",
  "productName": "audio-flashcard-assistant",
  "version": "0.4.1",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.0",
    "@material-ui/icons": "^3.0.1",
    "anki-apkg-export-multi-field": "^0.0.0",
    "asar": "0.14.3",
    "dataurl": "^0.1.0",
    "electron-devtools-installer": "^2.2.4",
    "ffmpeg-static": "^2.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "papaparse": "^4.5.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0",
    "reselect": "^3.0.1",
    "rxjs": "^6.2.2",
    "tempy": "^0.2.1",
    "uuid": "^3.3.2"
  },
  "main": "./main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "NODE_ENV=production react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "lint": "eslint src",
    "format": "prettier --ignore-path ./.gitignore --no-semi --single-quote --trailing-comma es5  \"{src/**,.}/*.js\"",
    "format:write": "yarn format --write",
    "build-electron:mac": "NODE_ENV=production electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/icon.icns --prune=true --out=release-builds",
    "build-electron:win": "electron-packager . audio-flashcard-assistant --asar.unpackDir=\"**/node_modules/ffmpeg-static/bin/win32*\" --overwrite --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Audio Flashcard Assistant\"",
    "build:mac": "yarn build && yarn build-electron:mac",
    "build:win": "yarn build && yarn build-electron:win && zip -r ./release-builds/afca.zip ./release-builds/audio-flashcard-assistant-win32-ia32"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --list-different"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "3.0.6",
    "electron-packager": "^12.2.0",
    "flow-bin": "^0.86.0",
    "husky": "^1.1.3",
    "prettier": "1.15.3",
    "silvestre-afa-react-scripts": "^2.1.2"
  },
  "bruild": {
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/*"
    ]
  }
}
