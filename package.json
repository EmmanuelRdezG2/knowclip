{
  "name": "knowclip",
  "productName": "knowclip",
  "version": "0.5.0",
  "private": true,
  "engines": {
    "node": "^12.4.0"
  },
  "author": {
    "name": "Justin Silvestre",
    "email": "justinsilvestre@gmail.com"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.0",
    "@material-ui/icons": "^3.0.1",
    "anki-apkg-export-multi-field": "^0.1.0",
    "asar": "0.14.3",
    "dataurl": "^0.1.0",
    "electron-devtools-installer": "^2.2.4",
    "ffmpeg-static": "^2.4.0",
    "ffprobe-static": "^3.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "material-ui-chip-input": "^1.0.0-beta.14",
    "moment": "^2.24.0",
    "papaparse": "^4.5.0",
    "react": "^16.8.4",
    "react-autosuggest": "^9.4.3",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-hot-loader": "^4.8.0",
    "react-redux": "^7.1.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0",
    "redux-persist": "^6.0.0",
    "reselect": "^3.0.1",
    "rxjs": "^6.2.2",
    "subsrt": "^1.0.0",
    "subtitle": "^2.0.3",
    "tempy": "^0.3.0",
    "uuid": "^3.3.2",
    "xss": "^1.0.6"
  },
  "main": "./main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "NODE_ENV=production react-scripts build",
    "build:ci": "CI=false yarn build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "lint": "eslint src/**/*.{ts,tsx,js}",
    "format": "prettier --ignore-path ./.gitignore \"{src/**,.}/*.{js,ts,tsx}\"",
    "format:write": "yarn format --write",
    "tsc": "tsc",
    "tidy": "yarn format --list-different && yarn lint && yarn tsc",
    "electron-builder": "electron-builder",
    "dist": "yarn build:ci && yarn electron-builder"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tidy; git diff"
    }
  },
  "browserslist": [
    "electron >= 6.0.12"
  ],
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.11",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/papaparse": "^5.0.1",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^7.1.4",
    "@types/reselect": "^2.2.0",
    "@types/subtitle": "^2.0.2",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "electron": "6.0.12",
    "electron-builder": "^22.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.1.3",
    "prettier": "1.15.3",
    "silvestre-afa-react-scripts": "^3.3.0",
    "typescript": "^3.6.3"
  },
  "build": {
    "appId": "com.electron.knowclip",
    "asar": true,
    "productName": "Knowclip",
    "copyright": "Copyright 2019 Justin Silvestre",
    "files": [
      "./build",
      "./icons",
      "./main.js",
      "./electron"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "./icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.education",
      "icon": "./icons/icon.icns"
    }
  }
}
